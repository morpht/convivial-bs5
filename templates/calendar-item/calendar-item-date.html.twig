{#
/**
 * @file
 * Calendar Item Date template.
 */
#}
{% set classes = [
  'calendar-date'
] %}

{% if datetime %}
  <time datetime={{ datetime }} {{ attributes.addClass(classes) }}>
    {{ day_textual }}
    <span class="calendar-number">{{ day_number }}</span>
    {{ month }}
  </time>
{% endif %}
