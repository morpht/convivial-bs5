{{#if this.length}}
  <div class="list-layout list-layout--12">
    <div role="list" class="list">
      {{#each this}}
        <div role="listitem" class="list__item">
          <div class="summary">
            <div class="summary__content">
              {{#if type}}
                <div class="summary__info">
                  {{~{ type }~}}
                </div>
              {{/if}}
              {{#if date}}
                <div class="summary__date">
                  {{~{ date }~}}
                </div>
              {{/if}}
              {{#if link}}
                <h3 class="summary__title">
                  <a href="{{~{ link }~}}">{{~{ title }~}}</a>
                </h3>
              {{else}}
                <h3 class="summary__title">
                  {{~{ title }~}}
                </h3>
              {{/if}}
              {{#if body}}
                <div class="summary__summary">
                  {{~{ body }~}}
                </div>
              {{/if}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
{{/if}}
