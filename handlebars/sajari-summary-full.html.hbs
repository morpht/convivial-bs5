<div class="list-layout list-layout--12">
  <div class="list">
    {{#each recomms}}
      <div class="list__item">
        <div class="summary">
          <div class="summary__content">
            <h3 class="summary__title">
              <a href="{{values.url}}">
                {{values.title}}
              </a>
            </h3>
            <div class="summary__summary">
              {{values.summary}}
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
 </div>
