{
  "name": "convivial_bootstrap",
  "description": "Convivial theme based on Boostrap 5.",
  "css": {
    "file" : "style.css",
    "src": "./base/scss/*.scss",
    "dest": "css"
  },
  "css_components": {
    "src": "./components/**/*.scss",
    "dest": "./components"
  },
  "js": {
    "file" : "convivial-bootstrap.js",
    "src": [
      "./base/js/**/*.js"
    ],
    "dest": "js"
  },
  "images": {
    "src": [
      "./assets/images/**/*"
    ],
    "dest": "images"
  },
  "libraries": {
    "src": [
      "./node_modules/accessible-mega-menu/css/megamenu.css",
      "./node_modules/accessible-mega-menu/js/jquery-accessibleMegaMenu.js",
      "./node_modules/anchorific/min/*",
      "./node_modules/billboard.js/dist/**/*",
      "./node_modules/bootstrap-ie11/css/**/*",
      "./node_modules/bootstrap/**/*",
      "./node_modules/d3/dist/*",
      "./node_modules/flexslider/flexslider.css",
      "./node_modules/flexslider/fonts/*",
      "./node_modules/flexslider/jquery.flexslider-min.js",
      "./node_modules/flipclock/compiled/*",
      "./node_modules/glightbox/dist/css/*.css",
      "./node_modules/glightbox/dist/js/*.js",
      "./node_modules/jquery-ui-dist/*.css",
      "./node_modules/jquery-ui-dist/*.js",
      "./node_modules/leaflet/dist/**/*",
      "./node_modules/object-fit-images/dist/*",
      "./node_modules/slick-carousel/slick/**/*",
      "./node_modules/smooth-scroll/dist/*",
      "./node_modules/van11y-accessible-tab-panel-aria/dist/*"
    ],
    "dest": "libraries"
  }
}
